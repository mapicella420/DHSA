<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group01.dhsa.Controller.DoctorPanelController">
   <left>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
              <MenuBar prefHeight="25.0" prefWidth="600.0">
                  <menus>
                      <!-- File Menu -->
                      <Menu styleClass="menu-bar" text="File">
                          <items>
                              <MenuItem onAction="#onCloseApp" styleClass="menu-item" text="Close App" />
                        <MenuItem fx:id="logout" mnemonicParsing="false" onAction="#logout" text="Logout" />
                          </items>
                      </Menu>
      
                      <!-- Upload CSV Menu -->
                      <Menu styleClass="menu-bar" text="FHIR resources">
                          <items>
                              <MenuItem onAction="#onUploadCsvMenuClick" styleClass="menu-item" text="Import from CSV" />
                              <MenuItem onAction="#onViewCsvMenuClick" styleClass="menu-item" text="View FHIR resources" />
                              <MenuItem onAction="#onConvertCsvClick" styleClass="menu-item" text="Export to CSV" />

                          </items>
                      </Menu>
      
                      <!-- Import DICOM Files Menu -->
                      <Menu styleClass="menu-bar" text="Import DICOM Files">
                          <items>
                              <MenuItem onAction="#onImportDicomMenuClick" styleClass="menu-item" text="Import DICOM File" />
                          </items>
                      </Menu>
                  </menus>
              </MenuBar>
              <VBox alignment="CENTER" spacing="20.0" />
               <Label layoutX="227.0" layoutY="133.0" styleClass="label-title" text="Doctor Panel">
               <font>
                  <Font size="29.0" />
               </font>
            </Label>
               <!-- Red Button -->
               <Button fx:id="dischargePatientButton" layoutX="209.0" layoutY="214.0" onAction="#onDischargePatientClick" prefHeight="46.0" prefWidth="181.0" styleClass="button-red" text="Discharge Patient" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </AnchorPane>
   </left>
</BorderPane>
