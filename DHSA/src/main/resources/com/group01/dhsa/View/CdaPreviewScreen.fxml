<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<AnchorPane stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group01.dhsa.Controller.CdaPreviewController">
    <!-- WebView -->
    <WebView fx:id="webView" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />

    <!-- Pulsante Back -->
    <Button fx:id="backButton" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" onAction="#handleBackButton" styleClass="button-blue" text="Back" />

    <!-- Pulsante Upload CDA -->
    <Button fx:id="uploadButton" AnchorPane.topAnchor="12.0" AnchorPane.leftAnchor="355.0" mnemonicParsing="false" onAction="#uploadCda" styleClass="button-red" text="Upload CDA" />

    <!-- Pulsante Print -->
    <Button fx:id="printButton" AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0" onAction="#handlePrintButton" styleClass="button-blue" text="Print">
        <graphic>
            <ImageView fitHeight="20" fitWidth="20">
                <Image url="@../icons/printer.png" />
            </ImageView>
        </graphic>
    </Button>
</AnchorPane>
