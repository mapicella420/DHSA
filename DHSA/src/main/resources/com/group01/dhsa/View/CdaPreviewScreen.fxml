<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group01.dhsa.Controller.CdaPreviewController" stylesheets="@../styles/styles.css">
    <!-- WebView -->
    <WebView fx:id="webView" layoutX="0.0" layoutY="50.0" prefWidth="794.0" prefHeight="700.0" />

    <!-- Pulsante Back -->
    <Button fx:id="backButton" text="Back" styleClass="button-blue" layoutX="10.0" layoutY="10.0" onAction="#handleBackButton" />

    <!-- Pulsante Print -->
    <Button fx:id="printButton" text="Print" styleClass="button-blue" layoutY="10.0" AnchorPane.rightAnchor="10.0" onAction="#handlePrintButton">
        <graphic>
            <ImageView fitWidth="20" fitHeight="20">
                <Image url="@../icons/printer.png" />
            </ImageView>
        </graphic>
    </Button>
</AnchorPane>
