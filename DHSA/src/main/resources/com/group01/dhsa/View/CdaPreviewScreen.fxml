<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<AnchorPane stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group01.dhsa.Controller.CdaPreviewController">
    <!-- WebView -->
    <WebView fx:id="webView" layoutX="0.0" layoutY="50.0" prefHeight="700.0" prefWidth="794.0" />

    <!-- Pulsante Back -->
    <Button fx:id="backButton" layoutX="10.0" layoutY="10.0" onAction="#handleBackButton" styleClass="button-blue" text="Back" />

    <Button fx:id="uploadButton" layoutX="355.0" layoutY="12.0" mnemonicParsing="false" onAction="#uploadCda" styleClass="button-red" text="Upload CDA" />


    <!-- Pulsante Print -->
    <Button fx:id="printButton" layoutY="10.0" onAction="#handlePrintButton" styleClass="button-blue" text="Print" AnchorPane.rightAnchor="10.0">
        <graphic>
            <ImageView fitHeight="20" fitWidth="20">
                <Image url="@../icons/printer.png" />
            </ImageView>
        </graphic>
    </Button>

</AnchorPane>
